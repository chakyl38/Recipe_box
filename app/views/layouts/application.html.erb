<!DOCTYPE html>
<html>
  <head>
    <title>RecipeBox</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'layouts/nav' %>
    <br>
    <div class="container">
      <% flash.each do |name, msg| %>
        <div class="alert">
          <%= content_tag :div, msg %>
        </div>
      <% end %>
      <%= yield %>
    </div>
    
  </body>
</html>
