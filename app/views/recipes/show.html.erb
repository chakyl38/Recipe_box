<div class="main_content">
	<div id="recipe_top" class="row">
		<div class="col s4 ">
			<%= image_tag @recipe.image.url(:medium, class: "recipe_image") %>
		</div>
		<div class="col s7 push-s1">
			<div id="recipe_info">
				<h1><%= @recipe.title %></h1>
				<p class="description">
					<%= @recipe.description %>
				</p>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col s6">
			<div id="ingredients">
				<h2>Ingedients</h2>
				<ul>
					<% @recipe.ingredients.each do |ingredient| %>
						<li><%= ingredient.name %></li>
					<% end %>
				</ul>
			</div>
		</div>
		<div class="col s6">
			<div id="directions">
				<h2>Directions</h2>
				<ul>
					<% @recipe.directions.each do |direction| %>
						<li><%= direction.step %></li>
					<% end %>
				</ul>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col s12">
			<%= link_to "Back", root_path, class: "btn" %>
			<%= link_to "Edit", edit_recipe_path, class: "btn" %>
			<%= link_to "Delete", recipe_path, method: :delete, data: {confirm: "Are you sure"},class: "btn" %>
		</div>
	</div>
</div>



